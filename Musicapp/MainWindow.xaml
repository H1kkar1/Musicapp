<Window x:Class="Musicapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musicapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="800">
    <Grid>
        <Button x:Name ="play" Content="Play" HorizontalAlignment="Left" Margin="41,398,0,0" VerticalAlignment="Top" Foreground="#FF0A0202" Click="Button_Play"/>
        <Button x:Name ="stop" Content="Stop" HorizontalAlignment="Left" Margin="92,398,0,0" VerticalAlignment="Top" Click="Button_Stop"/>
        <Button x:Name ="change" Content="change" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Change"/>
        <TextBlock x:Name ="pole" HorizontalAlignment="Left" Margin="638,39,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Rectangle Margin="10,375,10,0" Stroke="Black"/>
        <Slider x:Name="track_time" Maximum="100" Margin="160,399,10,0" VerticalAlignment="Top" SelectionStart="0" PreviewMouseLeftButtonDown="StartTrackChanget_tack_time" PreviewMouseLeftButtonUp="EndTrackChanget_tack_time" />
        <Label x:Name ="track_name" Content="Label" HorizontalAlignment="Left" Margin="207,379,0,0" VerticalAlignment="Top" Height="26" Width="183" FontSize="10"/>

    </Grid>
</Window>
