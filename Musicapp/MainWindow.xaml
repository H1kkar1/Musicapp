<Window x:Class="Musicapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musicapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="460" Width="800">
    <Grid>
        <Rectangle Margin="10,375,10,0" Stroke="Black"/>
        <Button x:Name ="play" Content="Play" HorizontalAlignment="Left" Margin="53,397,0,0" VerticalAlignment="Top" Foreground="#FF0A0202" Click="Button_Play"/>
        <Button x:Name ="stop" Content="Stop" HorizontalAlignment="Left" Margin="50,397,0,0" VerticalAlignment="Top" Click="Button_Stop" Visibility="Hidden"/>
        <Button x:Name ="change" Content="change" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Button_Change"/>
        <TextBlock x:Name ="pole" HorizontalAlignment="Left" Margin="638,39,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Slider x:Name="track_time" Maximum="100" Margin="160,399,10,0" VerticalAlignment="Top" SelectionStart="0" PreviewMouseLeftButtonDown="StartTrackChanget_tack_time" PreviewMouseLeftButtonUp="EndTrackChanget_tack_time" />
        <Label x:Name ="track_name" Content="Label" HorizontalAlignment="Left" Margin="207,379,0,0" VerticalAlignment="Top" Height="26" Width="183" FontSize="10"/>
        <Button Content="Volume" HorizontalAlignment="Left" Margin="74,10,0,0" VerticalAlignment="Top" Click="Button_volume"/>
        <ProgressBar x:Name="Master_value" HorizontalAlignment="Left" Height="10" Margin="12,358,0,0" VerticalAlignment="Top" Width="100">
            <ProgressBar.RenderTransform>
                <RotateTransform Angle="270"/>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Slider HorizontalAlignment="Left" Margin="686,412,0,0" VerticalAlignment="Top" Width="94" Height="15" TickPlacement="BottomRight" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" Maximum="100" Minimum="0" Value="100"/>



    </Grid>
</Window>
