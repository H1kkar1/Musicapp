        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musicapp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name ="play" Content="Play" HorizontalAlignment="Left" Margin="280,202,0,0" VerticalAlignment="Top" Foreground="#FF0A0202" Click="Button_Play"/>
        <Button x:Name ="stop" Content="Stop" HorizontalAlignment="Left" Margin="360,202,0,0" VerticalAlignment="Top" Click="Button_Stop"/>
        <Button x:Name ="change" Content="change" HorizontalAlignment="Left" Margin="314,124,0,0" VerticalAlignment="Top" Click="Button_Change"/>
        <TextBlock x:Name ="pole" HorizontalAlignment="Left" Margin="638,39,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
