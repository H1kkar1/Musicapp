<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Musicapp"
        xmlns:Wave="clr-namespace:NAudio.Wave;assembly=NAudio.WinForms" x:Class="Musicapp.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="750">
    <Grid>
        <Rectangle Margin="-2,603,0,0" Stroke="Black"/>
        <Button x:Name ="play" Content="Play" HorizontalAlignment="Left" Margin="19,629,0,0" VerticalAlignment="Top" Foreground="#FF0A0202" Click="Button_Play"/>
        <Button x:Name ="stop" Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Stop" Margin="16,629,0,0" Visibility="Hidden"/>
        <TextBlock x:Name ="pole" HorizontalAlignment="Left" Margin="74,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="50" Width="657"/>
        <Slider x:Name="track_time" Maximum="100" Margin="0,608,170,0" VerticalAlignment="Top" SelectionStart="0" PreviewMouseLeftButtonDown="StartTrackChanget_tack_time" PreviewMouseLeftButtonUp="EndTrackChanget_tack_time" />
        <Label x:Name ="track_name" Content="Label" HorizontalAlignment="Left" Margin="64,626,0,0" VerticalAlignment="Top" Height="26" Width="407" FontSize="10"/>
        <Button Content="Volume" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Click="Button_volume"/>
        <Button x:Name ="change" Content="change" HorizontalAlignment="Left" Margin="11,8,0,0" VerticalAlignment="Top" Click="Button_Change"/>
        <ProgressBar x:Name="Master_value" HorizontalAlignment="Left" Height="11" Margin="668,672,0,0" VerticalAlignment="Top" Width="60">
            <ProgressBar.RenderTransform>
                <RotateTransform Angle="270"/>
            </ProgressBar.RenderTransform>
            <ProgressBar.DataContext>
                <Wave:WaveOut/>
            </ProgressBar.DataContext>
        </ProgressBar>
        <ListView x:Name="track_list" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="74,40,0,81" ItemsSource="{DynamicResource ResourceKey=tracks}" SelectionMode="Single" SelectionChanged="track_list_SelectionChanged" >
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=name}" Width="200">Название</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=time}" Width="120">Продолжительность</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=path}" Width="340">Путь</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>



    </Grid>
</Window>
